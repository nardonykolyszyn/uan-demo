<br>
<div class="container">
	
	<div class="panel panel-default">
	  <!-- Default panel contents -->

	  <div class="panel-heading text-center">Usuarios de UAN</div>

	  <!-- Table -->
	 
	  <table class="table">

	      <thead>
		    <tr>
		      <th>#</th>
		      <th>Nombre</th>
		      <th>Usuario</th>
		      <th>Commentarios</th>
		      <th colspan="3"></th>
		    </tr>
	  	</thead>

	  	<tbody>
	  	    <% n = 0 %>
	  		<% @users.each do |user| %>
	  			<tr>
	  				<td><%= n += 1 %></td>
	  				<td><%= user.name %></td>
	  				<td>@<%= user.username %></td>
	  				<td><%= user.comments_count %></td>
	  			</tr>
	  		<% end %>
	  	</tbody>
	  </table>
	  
	</div>
</div>

